# Use an official Python runtime as a parent image
FROM python:3.9-slim

# Set the working directory in the container
WORKDIR /app

# Copy the current directory contents into the container at /app
COPY . /app

# Install any needed packages specified in requirements.txt
RUN pip install --no-cache-dir -r setup/requirements.txt

# Install cron
RUN apt-get update && apt-get install -y cron

# Add crontab file in the cron directory
COPY crontab /etc/cron.d/hardn-cron

# Give execution rights on the cron job
RUN chmod 0644 /etc/cron.d/hardn-cron

# Apply cron job
RUN crontab /etc/cron.d/hardn-cron

# Create the log file to be able to run tail
RUN touch /var/log/cron.log

# Make port 80 available to the world outside this container
EXPOSE 80

# Define environment variable
ENV NAME World

# Ensure the container runs as a non-root user
RUN useradd -m nonrootuser
USER nonrootuser

# Run the HARDN script
CMD ["python", "src/hardn.py"]