#!/bin/bash
set -e

case "$1" in
  configure)
    echo "[postinst] Running install.sh to finalize setup..."

    # entry point
    if [ -x /usr/lib/hardn-xdr/install.sh ]; then
      /usr/lib/hardn-xdr/install.sh
    else
      echo "[postinst] Warning: install.sh not found or not executable."
    fi

    echo "HARDN-XDR installation complete."
    echo "Run with: sudo hardn-xdr"
    ;;
esac

exit 0