#!/bin/bash
set -e

logfile="$(mktemp /var/log/hardn-postinst.XXXXXX)"
echo "[postinst] Executed on $(date)" >> "$logfile"

case "$1" in
  configure)
    echo "[postinst] Running install.sh to finalize setup..." >> "$logfile"

    if [ -x /usr/lib/hardn-xdr/install.sh ]; then
      /usr/lib/hardn-xdr/install.sh >> "$logfile" 2>&1
    else
      echo "[postinst] Warning: install.sh not found or not executable." >> "$logfile"
    fi

    echo "HARDN-XDR installation complete."
    echo "Run with: sudo hardn-xdr"
    ;;
esac

exit 0